<style>
    /* styles.css */

#banner {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 25vw; /* one-quarter of the viewport width */
    height: 25vw; /* same as width for a square */
    opacity: 0;
    background-color: var(--highlight-color); /* Semi-transparent background */
    color: white;
    font-size: calc(1vw + 1em); /* responsive font size */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 10px;
    box-sizing: border-box;
    border-color: var(--pretty-border-color);
    visibility: hidden;
    transform: scale(0);
    animation: banner-animation 5s forwards;
}

@keyframes banner-animation {
    0% {
        opacity: 0;
        transform: scale(0);
        background-color: transparent;
    }
    100% {
        opacity: 0.75;
        transform: scale(1);
        background-color: var(--highlight-color);
        visibility: visible;
    }
}

/* Static banner for medium and small screens */
@media (max-width: 768px) {
    #banner {
        animation: none;
        opacity: 0.75;
        visibility: visible;
        width: 100%;
        height: auto;
        bottom: 0;
        left: 0;
        font-size: 1em;
    }
}

</style>

