<!-- Se includ fisierele CSS pentru stilizare -->
<link rel="stylesheet" href="/Resurse/css/galerie-statica.css" type="text/css">
<link rel="stylesheet" href="/Resurse/css/galerie-statica-mediu.css" type="text/css" media="screen and (max-width:1000px)">
<link rel="stylesheet" href="/Resurse/css/galerie-statica-mic.css" type="text/css" media="screen and (max-width:700px)">

<% var numarImaginiAfișate = 0; %> <!-- Inițializare număr imagini afișate -->
<!-- Incepe sectiunea pentru galeria statica -->
<section id="galerie-statica">
    <!-- Se creeaza un container pentru grila galeriei -->
    <div id="grid-galerie">
        <% var i=0; %>
        <% var d_vara=new Date("July 13, 2014 11:13:00"); %>
        <% var d=new Date(); %>
        <% var sfert=" "; %>
        <% var minute = d.getMinutes(); %>
        <% minute = Math.floor(minute / 15) * 15; %>

        <!-- Se determina sfertul de ora curent -->
        <% if (minute >= 0 && minute <= 15) { sfert = "1"; } %>
        <% if (minute >= 15 && minute <= 30) { sfert = "2"; } %>
        <% if (minute >= 30 && minute <= 45) { sfert = "3"; } %>
        <% if (minute >= 45 && minute <= 59) { sfert = "4"; } %>

        <!-- Se parcurg imaginile din variabila locals.imagini -->
        <% for (let imag of locals.imagini) { %>
            <% if(imag.sfert_ora && imag.sfert_ora==sfert) { %>
                <% if (numarImaginiAfișate < 10) { %> <!-- Verificare număr maxim de imagini afișate -->
                    <!-- Codul de afișare al imaginii -->
                    <figure>
                        <picture>
                            <source srcset="<%- imag.fisier_mic %>" media="(max-width:700px)" />
                            <source srcset="<%- imag.fisier_mediu %>" media="(max-width:1000px)" />
                            <img src="<%- imag.fisier %> " alt="imagini">
                        </picture>
                        <% if(imag.autor) { %>
                            <figcaption><%- imag.descriere %> by <%- imag.autor %></figcaption>
                        <% } else { %>
                            <figcaption><%- imag.descriere %></figcaption>
                        <% } %>
                    </figure>
                    <!-- Elemente de separare între imaginile afișate -->
                    <div id="gol"></div>
                    <div id="gol2"></div>
                    <% numarImaginiAfișate++; %> <!-- Incrementare număr imagini afișate -->
                <% } else { %>
                    <% break; %> <!-- Oprește bucla dacă s-au afișat deja 10 imagini -->
                <% } %>
            <% } %>
        <% } %>
    </div>
</section>